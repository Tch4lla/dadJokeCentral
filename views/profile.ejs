<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Jokes</h1>
    <ul>
    <% jokes.forEach( el => { %>
            <li class='jokeItem' data-id='<%=el._id%>'>
                <span><%= el.joke %></span>
                <span class='del'> Delete </span>
                <span class="update">Update</span>
            </li>
    <% }) %>    
    </ul>


    <form action="/profile/createJoke" method='POST'>
        <input type="text" placeholder="Enter new Joke" name='jokeItem'>
        <input type="submit">
    </form>

    <a href="/logout">Logout</a>

    <section>
        <h3>Update Joke</h3>
        <form action="/profile/updateJoke" method="PUT">
            <textarea type="text" placeholder="Update your joke..." name="updatedJoke"></textarea>
            <input type="submit">
        </form>
    </section>

    <script src="js/main.js"></script>
</body>
</html>